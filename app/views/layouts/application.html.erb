<!DOCTYPE html>
<html>
<head>
  <title>AuthTest</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <%= stylesheet_link_tag "photobox", :media => "all" %>
  <%= javascript_include_tag "photobox" %>

  <%= javascript_include_tag "jquery.maskedinput-1.2.2.min" %>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>


  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user && current_user.role == "1" %>
    <%= link_to "Register People", sign_up_path %>
    <%= link_to "List of Users", list_users_path%>
    <%= link_to "Log out", log_out_path %>
<% elsif current_user && current_user.role == "2" %>
    Logged in as <%= current_user.username %>.
    <%= link_to "Contact Me", contact_me_path %>
    <%= link_to "Log out", log_out_path %>
<% else %>
     <%= link_to "Contact Me", contact_me_path %>
     <%= link_to "log in", log_in_path %>
<% end %>


<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

<div id='gallery'>
  <a href="http://localhost:3000/assets/rails.png">
    <img src="/assets/rails.png" alt="photo1 title">
  </a>
  <a href="http://localhost:3000/assets/cave.jpg">
    <img src="/assets/cave.jpg" alt="photo2 title">
  </a>
  <a href="http://localhost:3000/assets/fruits.jpg">
    <img src="/assets/fruits.jpg" alt="photo3 title">
  </a>
  <a href="http://localhost:3000/assets/pool.jpg">
    <img src="/assets/pool.jpg" alt="photo4 title">
  </a>
</div>

<script>
    $('#gallery').photobox('a');
    // or with a fancier selector and some settings, and a callback:
    $('#gallery').photobox('a:first', { thumbs:false, time:0 }, imageLoaded);
    function imageLoaded(){
        console.log('image has been loaded...');
    }
</script>

</body>
</html>
